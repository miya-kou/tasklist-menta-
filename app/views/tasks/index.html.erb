<h1>Tasks</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>NO.</th>
        <th>タスク内容</th>
      </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.content %></td>
      <tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規メッセージの投稿', new_task_path, class: "btn btn-primary" %>
